%p#notice= notice

= image_tag @user.avatar_url

%p
  %strong First name:
  = @user.first_name

%p
  %strong Last name:
  = @user.last_name

%p
  %strong Timezone:
  = @user.time_zone

%p
  %strong Email:
  = link_to @user.email, 'mailto:' + @user.email

- if @user.global_role.is_instructor? or @user.global_role.is_admin?
  - consumer_key, consumer_secret = @creds.first
  %p
    %strong Consumer Key:
    %span#key
      = consumer_key
    %button.clipboard-btn.btn{:alt => "Copy consumer key to clipboard", "data-clipboard-target" => "#key", :type => "button"}
      %img.clippy{:src => "/assets/clippy.svg", :width => "13"}

  %p
    %strong Consumer Secret:
    %span#secret
      = consumer_secret
    %button.clipboard-btn.btn{"data-clipboard-demo" => "", "data-clipboard-target" => "#secret", :type => "button"}
      %img.clippy{:alt => "Copy consumer secret to clipboard", :src => "/assets/clippy.svg", :width => "13"}

%br

- if can? :update, @user
  = button_link 'Edit', edit_user_path(@user)
- if @user.global_role.is_instructor? or @user.global_role.is_admin?
  = button_link 'Update Access Token', "/admin/lms_accesses"
= button_link 'Back', root_path
