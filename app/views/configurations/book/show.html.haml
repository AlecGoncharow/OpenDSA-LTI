          .code-lang-opt.col-sm-6
            %input{type: "checkbox", name: "code-lang", id: "code-lang-#{code_lang}", value: code_lang}
            %label{for: "code-lang-#{code_lang}"}
              #{code_info[:label]}
    
    .form-group   
